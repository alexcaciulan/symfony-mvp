{% extends 'base.html.twig' %}

{% block title %}{{ 'reset_password.request.title'|trans }}{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto px-4 py-12 sm:py-20">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sm:p-8">
            <h1 class="text-2xl font-bold text-gray-900 mb-2 text-center">{{ 'reset_password.request.title'|trans }}</h1>
            <p class="text-sm text-gray-500 text-center mb-6">{{ 'reset_password.request.description'|trans }}</p>

            <form method="post">
                <div class="mb-6">
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-1">{{ 'reset_password.request.email_label'|trans }}</label>
                    <input type="email" name="email" id="email" required autofocus
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-light focus:border-transparent"
                           autocomplete="email">
                </div>

                <button type="submit" class="w-full py-3 bg-primary-light text-white font-semibold rounded-lg hover:bg-primary transition">
                    {{ 'reset_password.request.submit'|trans }}
                </button>
            </form>

            <p class="mt-6 text-center text-sm text-gray-500">
                <a href="{{ path('app_login') }}" class="text-primary-light hover:text-primary font-medium">{{ 'reset_password.request.back_to_login'|trans }}</a>
            </p>
        </div>
    </div>
{% endblock %}
