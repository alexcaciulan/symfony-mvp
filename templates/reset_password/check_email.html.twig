{% extends 'base.html.twig' %}

{% block title %}{{ 'reset_password.check_email.title'|trans }}{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto px-4 py-12 sm:py-20">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sm:p-8 text-center">
            <svg class="w-12 h-12 text-primary-light mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"/>
            </svg>
            <h1 class="text-2xl font-bold text-gray-900 mb-4">{{ 'reset_password.check_email.title'|trans }}</h1>
            <p class="text-gray-600 mb-2">{{ 'reset_password.check_email.message'|trans }}</p>
            <p class="text-sm text-gray-500 mb-6">{{ 'reset_password.check_email.expires'|trans({ '%minutes%': (tokenLifetime / 60)|round }) }}</p>

            <a href="{{ path('app_login') }}" class="text-primary-light hover:text-primary font-medium text-sm">{{ 'reset_password.request.back_to_login'|trans }}</a>
        </div>
    </div>
{% endblock %}
