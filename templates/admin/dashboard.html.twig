{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Dashboard{% endblock %}

{% block main %}
    {# ── Utilizatori ── #}
    <h3 style="font-size: 16px; font-weight: 600; color: #374151; margin: 0 0 12px 0;">Utilizatori</h3>
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(180px, 1fr)); gap: 16px; margin-bottom: 30px;">
        <div style="background: #fff; border: 1px solid #e5e7eb; border-radius: 10px; padding: 20px; text-align: center;">
            <div style="font-size: 32px; font-weight: 700; color: #1e40af;">{{ totalUsers }}</div>
            <div style="font-size: 13px; color: #6b7280; margin-top: 4px;">Total</div>
        </div>
        <div style="background: #fff; border: 1px solid #e5e7eb; border-radius: 10px; padding: 20px; text-align: center;">
            <div style="font-size: 32px; font-weight: 700; color: #059669;">{{ verifiedUsers }}</div>
            <div style="font-size: 13px; color: #6b7280; margin-top: 4px;">Verificați</div>
        </div>
        <div style="background: #fff; border: 1px solid #e5e7eb; border-radius: 10px; padding: 20px; text-align: center;">
            <div style="font-size: 32px; font-weight: 700; color: #d97706;">{{ unverifiedUsers }}</div>
            <div style="font-size: 13px; color: #6b7280; margin-top: 4px;">Neverificați</div>
        </div>
        <div style="background: #fff; border: 1px solid #e5e7eb; border-radius: 10px; padding: 20px; text-align: center;">
            <div style="font-size: 32px; font-weight: 700; color: #7c3aed;">{{ adminUsers }}</div>
            <div style="font-size: 13px; color: #6b7280; margin-top: 4px;">Administratori</div>
        </div>
    </div>

    {# ── Dosare ── #}
    <h3 style="font-size: 16px; font-weight: 600; color: #374151; margin: 0 0 12px 0;">Dosare</h3>
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(180px, 1fr)); gap: 16px; margin-bottom: 30px;">
        <div style="background: #fff; border: 1px solid #e5e7eb; border-radius: 10px; padding: 20px; text-align: center;">
            <div style="font-size: 32px; font-weight: 700; color: #1e40af;">{{ totalCases }}</div>
            <div style="font-size: 13px; color: #6b7280; margin-top: 4px;">Total dosare</div>
        </div>
        <div style="background: #fff; border: 1px solid #e5e7eb; border-radius: 10px; padding: 20px; text-align: center;">
            <div style="font-size: 32px; font-weight: 700; color: #6b7280;">{{ draftCases }}</div>
            <div style="font-size: 13px; color: #6b7280; margin-top: 4px;">Ciornă</div>
        </div>
        <div style="background: #fff; border: 1px solid #e5e7eb; border-radius: 10px; padding: 20px; text-align: center;">
            <div style="font-size: 32px; font-weight: 700; color: #d97706;">{{ pendingPaymentCases }}</div>
            <div style="font-size: 13px; color: #6b7280; margin-top: 4px;">Așteptare plată</div>
        </div>
        <div style="background: #fff; border: 1px solid #e5e7eb; border-radius: 10px; padding: 20px; text-align: center;">
            <div style="font-size: 32px; font-weight: 700; color: #2563eb;">{{ paidCases }}</div>
            <div style="font-size: 13px; color: #6b7280; margin-top: 4px;">Plătit</div>
        </div>
    </div>

    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(180px, 1fr)); gap: 16px; margin-bottom: 30px;">
        <div style="background: #fff; border: 1px solid #e5e7eb; border-radius: 10px; padding: 20px; text-align: center;">
            <div style="font-size: 32px; font-weight: 700; color: #2563eb;">{{ submittedCases }}</div>
            <div style="font-size: 13px; color: #6b7280; margin-top: 4px;">La instanță</div>
        </div>
        <div style="background: #fff; border: 1px solid #e5e7eb; border-radius: 10px; padding: 20px; text-align: center;">
            <div style="font-size: 32px; font-weight: 700; color: #7c3aed;">{{ underReviewCases }}</div>
            <div style="font-size: 13px; color: #6b7280; margin-top: 4px;">În analiză</div>
        </div>
        <div style="background: #fff; border: 1px solid #e5e7eb; border-radius: 10px; padding: 20px; text-align: center;">
            <div style="font-size: 32px; font-weight: 700; color: #059669;">{{ acceptedCases }}</div>
            <div style="font-size: 13px; color: #6b7280; margin-top: 4px;">Admise</div>
        </div>
        <div style="background: #fff; border: 1px solid #e5e7eb; border-radius: 10px; padding: 20px; text-align: center;">
            <div style="font-size: 32px; font-weight: 700; color: #dc2626;">{{ rejectedCases }}</div>
            <div style="font-size: 13px; color: #6b7280; margin-top: 4px;">Respinse</div>
        </div>
    </div>

    {# ── Venituri ── #}
    <h3 style="font-size: 16px; font-weight: 600; color: #374151; margin: 0 0 12px 0;">Financiar</h3>
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap: 16px; margin-bottom: 30px;">
        <div style="background: #fff; border: 1px solid #e5e7eb; border-radius: 10px; padding: 20px; text-align: center;">
            <div style="font-size: 32px; font-weight: 700; color: #059669;">{{ revenueThisMonth|number_format(2, ',', '.') }} RON</div>
            <div style="font-size: 13px; color: #6b7280; margin-top: 4px;">Venituri luna curentă</div>
        </div>
    </div>
{% endblock %}
