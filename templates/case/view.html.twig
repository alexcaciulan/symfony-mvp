{% extends 'base.html.twig' %}

{% block title %}{{ 'case_view.title'|trans({ '%id%': legalCase.id }) }} - {{ parent() }}{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex items-center justify-between mb-6">
        <h1 class="text-xl font-bold text-primary">{{ 'case_view.heading'|trans({ '%id%': legalCase.id }) }}</h1>
        <div class="flex items-center gap-3">
            {% if legalCase.status == 'pending_payment' %}
                <span class="inline-block px-3 py-1 text-xs font-medium rounded-full bg-orange-100 text-orange-800">{{ 'dashboard.cases.status_pending_payment'|trans }}</span>
            {% elseif legalCase.status == 'paid' %}
                <span class="inline-block px-3 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">{{ 'dashboard.cases.status_paid'|trans }}</span>
            {% elseif legalCase.status == 'submitted' %}
                <span class="inline-block px-3 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800">{{ 'dashboard.cases.status_submitted'|trans }}</span>
            {% else %}
                <span class="inline-block px-3 py-1 text-xs font-medium rounded-full bg-gray-100 text-gray-700">{{ legalCase.status }}</span>
            {% endif %}
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sm:p-8">
        {# Summary â€” same structure as step 6 but without edit links #}
        <div class="space-y-6 mb-8">
            {# Court #}
            <div class="border border-gray-200 rounded-lg p-4">
                <h3 class="text-sm font-semibold text-gray-700 mb-2">{{ 'wizard.stepper.court'|trans }}</h3>
                <dl class="grid grid-cols-2 gap-2 text-sm">
                    <dt class="text-gray-500">{{ 'wizard.step1.county'|trans }}</dt>
                    <dd class="text-gray-800">{{ legalCase.county ?? '-' }}</dd>
                    <dt class="text-gray-500">{{ 'wizard.step1.court'|trans }}</dt>
                    <dd class="text-gray-800">{{ legalCase.court ? legalCase.court.name : '-' }}</dd>
                </dl>
            </div>

            {# Claimant #}
            <div class="border border-gray-200 rounded-lg p-4">
                <h3 class="text-sm font-semibold text-gray-700 mb-2">{{ 'wizard.stepper.claimant'|trans }}</h3>
                {% set cd = legalCase.claimantData %}
                <dl class="grid grid-cols-2 gap-2 text-sm">
                    <dt class="text-gray-500">{{ 'wizard.step2.type'|trans }}</dt>
                    <dd class="text-gray-800">{{ legalCase.claimantType == 'pf' ? 'wizard.step2.type_pf'|trans : 'wizard.step2.type_pj'|trans }}</dd>
                    <dt class="text-gray-500">{{ 'wizard.step2.name'|trans }}</dt>
                    <dd class="text-gray-800">{{ cd.name ?? '-' }}</dd>
                    <dt class="text-gray-500">{{ 'wizard.step2.email'|trans }}</dt>
                    <dd class="text-gray-800">{{ cd.email ?? '-' }}</dd>
                    {% if cd and cd.city %}
                        <dt class="text-gray-500">{{ 'wizard.step2.city'|trans }}</dt>
                        <dd class="text-gray-800">{{ cd.city }}, {{ cd.county ?? '' }}</dd>
                    {% endif %}
                </dl>
                {% if legalCase.hasLawyer and legalCase.lawyerData %}
                    <div class="mt-2 pt-2 border-t border-gray-100">
                        <span class="text-xs font-medium text-gray-500">{{ 'wizard.step2.has_lawyer'|trans }}</span>
                        <span class="text-sm text-gray-800 ml-2">{{ legalCase.lawyerData.name ?? '-' }}</span>
                    </div>
                {% endif %}
            </div>

            {# Defendants #}
            <div class="border border-gray-200 rounded-lg p-4">
                <h3 class="text-sm font-semibold text-gray-700 mb-2">{{ 'wizard.stepper.defendant'|trans }}</h3>
                {% for defendant in legalCase.defendants ?? [] %}
                    <div class="{{ not loop.first ? 'mt-2 pt-2 border-t border-gray-100' : '' }}">
                        <dl class="grid grid-cols-2 gap-2 text-sm">
                            <dt class="text-gray-500">{{ 'wizard.step3.name'|trans }}</dt>
                            <dd class="text-gray-800">{{ defendant.name ?? '-' }}</dd>
                            <dt class="text-gray-500">{{ 'wizard.step3.city'|trans }}</dt>
                            <dd class="text-gray-800">{{ defendant.city ?? '-' }}, {{ defendant.county ?? '' }}</dd>
                        </dl>
                    </div>
                {% endfor %}
            </div>

            {# Claim #}
            <div class="border border-gray-200 rounded-lg p-4">
                <h3 class="text-sm font-semibold text-gray-700 mb-2">{{ 'wizard.stepper.claim'|trans }}</h3>
                <dl class="grid grid-cols-2 gap-2 text-sm">
                    <dt class="text-gray-500">{{ 'wizard.step4.claim_amount'|trans }}</dt>
                    <dd class="text-gray-800 font-semibold">{{ legalCase.claimAmount|number_format(2, ',', '.') }} RON</dd>
                    <dt class="text-gray-500">{{ 'wizard.step4.claim_description'|trans }}</dt>
                    <dd class="text-gray-800 col-span-2">{{ legalCase.claimDescription ?? '-' }}</dd>
                    {% if legalCase.interestType != 'none' %}
                        <dt class="text-gray-500">{{ 'wizard.step4.interest_type'|trans }}</dt>
                        <dd class="text-gray-800">{{ ('wizard.step4.interest_' ~ legalCase.interestType)|trans }}</dd>
                    {% endif %}
                </dl>
            </div>

            {# Evidence #}
            <div class="border border-gray-200 rounded-lg p-4">
                <h3 class="text-sm font-semibold text-gray-700 mb-2">{{ 'wizard.stepper.evidence'|trans }}</h3>
                <dl class="grid grid-cols-2 gap-2 text-sm">
                    {% if legalCase.evidenceDescription %}
                        <dt class="text-gray-500">{{ 'wizard.step5.evidence_description'|trans }}</dt>
                        <dd class="text-gray-800 col-span-2">{{ legalCase.evidenceDescription }}</dd>
                    {% endif %}
                    {% if legalCase.hasWitnesses and legalCase.witnesses %}
                        <dt class="text-gray-500">{{ 'wizard.step5.has_witnesses'|trans }}</dt>
                        <dd class="text-gray-800">{{ legalCase.witnesses|length }} {{ 'wizard.step6.witnesses_count'|trans }}</dd>
                    {% endif %}
                    {% if legalCase.requestOralDebate %}
                        <dt class="text-gray-500 col-span-2">{{ 'wizard.step5.request_oral_debate'|trans }}</dt>
                    {% endif %}
                </dl>
            </div>
        </div>

        {# Fee summary #}
        {% if legalCase.totalFee %}
            <div class="bg-blue-50 rounded-lg p-5 border border-blue-200 mb-8">
                <h3 class="text-sm font-semibold text-gray-700 mb-3">{{ 'wizard.step6.fee_summary'|trans }}</h3>
                <dl class="space-y-2">
                    <div class="flex justify-between text-sm">
                        <dt class="text-gray-600">{{ 'wizard.step6.court_fee'|trans }}</dt>
                        <dd class="text-gray-800">{{ legalCase.courtFee|number_format(2, ',', '.') }} RON</dd>
                    </div>
                    <div class="flex justify-between text-sm">
                        <dt class="text-gray-600">{{ 'wizard.step6.platform_fee'|trans }}</dt>
                        <dd class="text-gray-800">{{ legalCase.platformFee|number_format(2, ',', '.') }} RON</dd>
                    </div>
                    <div class="flex justify-between text-sm font-bold border-t border-blue-200 pt-2 mt-2">
                        <dt class="text-gray-800">{{ 'wizard.step6.total_fee'|trans }}</dt>
                        <dd class="text-primary">{{ legalCase.totalFee|number_format(2, ',', '.') }} RON</dd>
                    </div>
                </dl>
            </div>
        {% endif %}

        {% if legalCase.submittedAt %}
            <p class="text-sm text-gray-500">{{ 'case_view.submitted_at'|trans({ '%date%': legalCase.submittedAt|date('d.m.Y H:i') }) }}</p>
        {% endif %}

        <div class="mt-6">
            <a href="{{ path('dashboard_cases') }}" class="px-6 py-2.5 border border-gray-300 text-gray-700 rounded-lg font-medium hover:bg-gray-50 transition-colors no-underline">
                {{ 'case_view.back_to_cases'|trans }}
            </a>
        </div>
    </div>
</div>
{% endblock %}
