{# Individual witness form fields #}
<div class="space-y-3">
    <div>
        {{ form_label(witness.name, null, { label_attr: { class: 'block text-sm font-medium text-gray-700 mb-1' }}) }}
        {{ form_widget(witness.name, { attr: { class: 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-light' }}) }}
        {{ form_errors(witness.name) }}
    </div>
    <div>
        {{ form_label(witness.address, null, { label_attr: { class: 'block text-sm font-medium text-gray-700 mb-1' }}) }}
        {{ form_widget(witness.address, { attr: { class: 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-light' }}) }}
    </div>
    <div>
        {{ form_label(witness.details, null, { label_attr: { class: 'block text-sm font-medium text-gray-700 mb-1' }}) }}
        {{ form_widget(witness.details, { attr: { class: 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-light' }}) }}
    </div>
</div>
