{# Documents section — list + upload form + delete #}
<div class="border border-gray-200 rounded-lg p-4 mb-8">
    <h3 class="text-sm font-semibold text-gray-700 mb-3">{{ 'case_view.documents'|trans }}</h3>

    {# Document list #}
    {% if legalCase.documents is not empty %}
        <ul class="space-y-2 mb-4">
            {% for doc in legalCase.documents %}
                <li class="flex items-center justify-between text-sm py-1">
                    <div class="flex items-center gap-2 min-w-0">
                        {# Icon per type #}
                        {% if doc.mimeType == 'application/pdf' %}
                            <svg class="w-5 h-5 text-red-500 shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M4 18h12a2 2 0 002-2V6l-4-4H4a2 2 0 00-2 2v12a2 2 0 002 2zm8-14l4 4h-4V4zM6 10h8v2H6v-2zm0 4h5v2H6v-2z"/>
                            </svg>
                        {% elseif doc.mimeType starts with 'image/' %}
                            <svg class="w-5 h-5 text-green-500 shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"/>
                            </svg>
                        {% else %}
                            <svg class="w-5 h-5 text-blue-500 shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M4 18h12a2 2 0 002-2V6l-4-4H4a2 2 0 00-2 2v12a2 2 0 002 2zm8-14l4 4h-4V4z"/>
                            </svg>
                        {% endif %}

                        <div class="min-w-0">
                            <span class="text-gray-800 truncate block">{{ doc.originalFilename }}</span>
                            <span class="text-gray-400 text-xs">
                                {{ doc.documentType.label }} &middot;
                                {{ (doc.fileSize / 1024)|number_format(0) }} KB &middot;
                                {{ doc.createdAt|date('d.m.Y') }}
                            </span>
                        </div>
                    </div>

                    <div class="flex items-center gap-2 shrink-0 ml-2">
                        <a href="{{ path('case_document_download', { caseId: legalCase.id, documentId: doc.id }) }}"
                           class="text-primary-light hover:text-primary font-medium no-underline text-xs">
                            {{ 'case_view.download'|trans }}
                        </a>

                        {# Delete button — only for user-uploaded docs, not CERERE_PDF #}
                        {% if doc.documentType.value != 'cerere_pdf' and canUpload|default(false) %}
                            <form method="post"
                                  action="{{ path('case_document_delete', { caseId: legalCase.id, documentId: doc.id }) }}"
                                  onsubmit="return confirm('{{ 'document.delete.confirm'|trans|e('js') }}');"
                                  class="inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete-document-' ~ doc.id) }}">
                                <button type="submit" class="text-red-500 hover:text-red-700 font-medium text-xs">
                                    {{ 'document.delete.button'|trans }}
                                </button>
                            </form>
                        {% endif %}
                    </div>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p class="text-sm text-gray-400 mb-4">{{ 'case_view.no_documents'|trans }}</p>
    {% endif %}

    {# Upload form — visible only if user can upload #}
    {% if canUpload|default(false) and uploadForm is defined %}
        {% set docCount = legalCase.documents|length %}
        {% if docCount < 10 %}
            <div class="border-t border-gray-200 pt-4">
                <h4 class="text-sm font-medium text-gray-600 mb-3">{{ 'document.upload.title'|trans }}</h4>
                {{ form_start(uploadForm, { action: path('case_document_upload', { caseId: legalCase.id }), attr: { enctype: 'multipart/form-data' } }) }}
                    <div class="flex flex-col sm:flex-row gap-3">
                        <div class="flex-1">
                            {{ form_widget(uploadForm.file, { attr: { class: 'block w-full text-sm text-gray-500 file:mr-3 file:py-1.5 file:px-3 file:rounded-lg file:border-0 file:text-sm file:font-medium file:bg-primary-light file:text-white hover:file:bg-primary file:cursor-pointer' }}) }}
                        </div>
                        <div class="w-full sm:w-48">
                            {{ form_widget(uploadForm.documentType, { attr: { class: 'w-full px-3 py-1.5 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-primary-light' }}) }}
                        </div>
                        <button type="submit" class="px-4 py-1.5 bg-primary-light text-white rounded-lg text-sm font-medium hover:bg-primary transition-colors shrink-0">
                            {{ 'document.upload.submit'|trans }}
                        </button>
                    </div>
                    <p class="text-xs text-gray-400 mt-2">PDF, JPG, PNG &middot; max 10MB &middot; {{ docCount }}/10 {{ 'case_view.documents'|trans|lower }}</p>
                {{ form_end(uploadForm) }}
            </div>
        {% else %}
            <div class="border-t border-gray-200 pt-4">
                <p class="text-sm text-orange-600">{{ 'document.upload.max_files_reached'|trans }}</p>
            </div>
        {% endif %}
    {% endif %}
</div>
