<!DOCTYPE html>
<html lang="ro">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}RecuperăriCreanțe{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚖️</text></svg>">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
        {% block stylesheets %}{% endblock %}
        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="min-h-screen flex flex-col bg-surface" style="font-family:'DM Sans',sans-serif;">
        {# Header #}
        <header class="sticky top-0 z-50 bg-white border-b border-gray-200 shadow-sm">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8" data-controller="mobile-menu">
                <div class="flex items-center justify-between h-16">
                    {# Logo #}
                    <a href="{{ path('app_home') }}" class="text-xl font-bold text-primary no-underline">
                        RecuperăriCreanțe
                    </a>

                    {# Desktop Navigation #}
                    <nav class="hidden md:flex items-center gap-6">
                        <a href="{{ path('app_home') }}" class="text-gray-600 hover:text-primary font-medium no-underline">Acasă</a>
                        {% if app.user %}
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('admin') }}" class="text-gray-600 hover:text-primary font-medium no-underline">Admin</a>
                            {% endif %}
                            <span class="text-gray-500 text-sm">{{ app.user.userIdentifier }}</span>
                            <a href="{{ path('app_logout') }}" class="text-sm text-red-600 hover:text-red-800 font-medium no-underline">Deconectare</a>
                        {% else %}
                            <a href="{{ path('app_login') }}" class="text-gray-600 hover:text-primary font-medium no-underline">Autentificare</a>
                            <a href="{{ path('app_register') }}" class="inline-block px-4 py-2 bg-primary-light text-white rounded-lg font-medium hover:bg-primary no-underline text-sm">Înregistrare</a>
                        {% endif %}
                    </nav>

                    {# Mobile Hamburger #}
                    <button class="md:hidden p-2 text-gray-600 hover:text-primary" data-action="click->mobile-menu#toggle" aria-label="Meniu">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                        </svg>
                    </button>
                </div>

                {# Mobile Menu #}
                <div class="hidden md:hidden pb-4 border-t border-gray-100" data-mobile-menu-target="menu">
                    <nav class="flex flex-col gap-3 pt-4">
                        <a href="{{ path('app_home') }}" class="text-gray-600 hover:text-primary font-medium no-underline">Acasă</a>
                        {% if app.user %}
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('admin') }}" class="text-gray-600 hover:text-primary font-medium no-underline">Admin</a>
                            {% endif %}
                            <span class="text-gray-500 text-sm">{{ app.user.userIdentifier }}</span>
                            <a href="{{ path('app_logout') }}" class="text-red-600 hover:text-red-800 font-medium no-underline">Deconectare</a>
                        {% else %}
                            <a href="{{ path('app_login') }}" class="text-gray-600 hover:text-primary font-medium no-underline">Autentificare</a>
                            <a href="{{ path('app_register') }}" class="text-primary-light hover:text-primary font-medium no-underline">Înregistrare</a>
                        {% endif %}
                    </nav>
                </div>
            </div>
        </header>

        {# Flash Messages #}
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
                    <div role="alert" class="px-4 py-3 rounded-lg text-sm font-medium
                        {% if type == 'success' %} bg-green-50 text-green-800 border border-green-200
                        {% elseif type == 'error' or type == 'verify_email_error' %} bg-red-50 text-red-800 border border-red-200
                        {% elseif type == 'warning' %} bg-yellow-50 text-yellow-800 border border-yellow-200
                        {% else %} bg-blue-50 text-blue-800 border border-blue-200
                        {% endif %}">
                        {{ message }}
                    </div>
                </div>
            {% endfor %}
        {% endfor %}

        {# Main Content #}
        <main class="flex-1">
            {% block body %}{% endblock %}
        </main>

        {# Footer #}
        <footer class="bg-white border-t border-gray-200 mt-auto">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
                <div class="flex flex-col sm:flex-row items-center justify-between gap-4 text-sm text-gray-500">
                    <p>&copy; {{ "now"|date("Y") }} RecuperăriCreanțe. Toate drepturile rezervate.</p>
                    <div class="flex gap-6">
                        <a href="#" class="hover:text-primary no-underline">Termeni și condiții</a>
                        <a href="#" class="hover:text-primary no-underline">Contact</a>
                    </div>
                </div>
            </div>
        </footer>
    </body>
</html>
