{% extends 'base.html.twig' %}

{% block title %}Verifică-ți email-ul{% endblock %}

{% block body %}
    <div style="max-width:500px;margin:60px auto;text-align:center;">
        {% for flash_message in app.flashes('success') %}
            <div style="padding:12px 16px;margin-bottom:16px;background:#dcfce7;color:#166534;border-radius:6px;">
                {{ flash_message }}
            </div>
        {% endfor %}

        {% for flash_message in app.flashes('warning') %}
            <div style="padding:12px 16px;margin-bottom:16px;background:#fef9c3;color:#854d0e;border-radius:6px;">
                {{ flash_message }}
            </div>
        {% endfor %}

        <h1 style="font-size:24px;margin-bottom:16px;">Verifică-ți email-ul</h1>

        <p style="color:#555;margin-bottom:24px;">
            Un email de confirmare a fost trimis la adresa
            <strong>{{ app.user.email }}</strong>.
            Te rugăm să accesezi link-ul din email pentru a-ți verifica contul.
        </p>

        <p style="color:#888;font-size:14px;margin-bottom:24px;">
            Nu ai primit email-ul? Verifică și folderul de spam.
        </p>

        <a href="{{ path('app_resend_verification') }}"
           style="display:inline-block;padding:10px 20px;background:#2563eb;color:#fff;text-decoration:none;border-radius:6px;">
            Retrimite email-ul de verificare
        </a>
    </div>
{% endblock %}
