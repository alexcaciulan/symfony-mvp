{% extends 'base.html.twig' %}

{% block title %}{{ 'registration.check_email.title'|trans }}{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto px-4 py-12 sm:py-20">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sm:p-8 text-center">
            <div class="w-16 h-16 mx-auto mb-6 bg-blue-100 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-primary-light" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
            </div>

            <h1 class="text-2xl font-bold text-gray-900 mb-4">{{ 'registration.check_email.heading'|trans }}</h1>

            <p class="text-gray-500 mb-2">
                {{ 'registration.check_email.sent_to'|trans }}
            </p>
            <p class="font-semibold text-gray-900 mb-6">{{ app.user.email }}</p>

            <p class="text-sm text-gray-400 mb-8">
                {{ 'registration.check_email.instructions'|trans }}
            </p>

            <a href="{{ path('app_resend_verification') }}"
               class="inline-block px-6 py-3 bg-primary-light text-white font-semibold rounded-lg hover:bg-primary no-underline transition">
                {{ 'registration.check_email.resend_button'|trans }}
            </a>
        </div>
    </div>
{% endblock %}
