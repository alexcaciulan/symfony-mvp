{% extends 'base.html.twig' %}

{% block title %}Înregistrare{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto px-4 py-12 sm:py-20">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sm:p-8">
            <h1 class="text-2xl font-bold text-gray-900 mb-6 text-center">Creează un cont</h1>

            {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
                {% if registrationForm.vars.errors|length > 0 %}
                    <div class="px-4 py-3 mb-4 rounded-lg bg-red-50 text-red-800 border border-red-200 text-sm" role="alert">
                        {{ form_errors(registrationForm) }}
                    </div>
                {% endif %}

                <div class="mb-4">
                    {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-light focus:border-transparent'}}) }}
                    {{ form_errors(registrationForm.email) }}
                </div>

                <div class="mb-4">
                    {{ form_label(registrationForm.plainPassword.first, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-light focus:border-transparent'}}) }}
                    {{ form_errors(registrationForm.plainPassword.first) }}
                </div>

                <div class="mb-4">
                    {{ form_label(registrationForm.plainPassword.second, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-light focus:border-transparent'}}) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>

                <div class="mb-6">
                    <div class="flex items-start gap-2">
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'mt-1 h-4 w-4 text-primary-light border-gray-300 rounded focus:ring-primary-light'}}) }}
                        {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'text-sm text-gray-600'}}) }}
                    </div>
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>

                <button type="submit" class="w-full py-3 bg-primary-light text-white font-semibold rounded-lg hover:bg-primary transition">
                    Înregistrare
                </button>
            {{ form_end(registrationForm) }}

            <p class="mt-6 text-center text-sm text-gray-500">
                Ai deja cont?
                <a href="{{ path('app_login') }}" class="text-primary-light hover:text-primary font-medium">Autentifică-te</a>
            </p>
        </div>
    </div>
{% endblock %}
